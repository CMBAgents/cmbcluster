# Environment Configuration
PORT=3000
NEXT_PUBLIC_PORT=3000

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
API_URL=http://localhost:8000

# NextAuth Configuration - CRITICAL FOR SECURITY
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-very-long-random-secret-key-replace-in-production-minimum-32-chars

# Google OAuth Configuration - REQUIRED
GOOGLE_CLIENT_ID=your-google-client-id-from-console
GOOGLE_CLIENT_SECRET=your-google-client-secret-from-console

# Security Configuration
NODE_ENV=development

# App Configuration
NEXT_PUBLIC_APP_TITLE=CMBAgent Cloud
NEXT_PUBLIC_APP_TAGLINE=Your gateway to autonomous research

# Theme Colors (matching secure dark theme)
