NEXT_PUBLIC_BACKGROUND_COLOR=#0E1117
NEXT_PUBLIC_SECONDARY_COLOR=#1A1F2E
NEXT_PUBLIC_TERTIARY_COLOR=#252B3A
NEXT_PUBLIC_TEXT_PRIMARY=#FFFFFF
