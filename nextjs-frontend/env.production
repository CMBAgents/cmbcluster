# Production Environment Configuration for Next.js Frontend
# This file contains production-specific environment variables

# Application Configuration
NODE_ENV=production
PORT=8501

# Next.js Configuration  
NEXT_TELEMETRY_DISABLED=1
HOSTNAME=0.0.0.0

# API Configuration (matches api_client.py patterns)
API_URL=https://api.cmbagent.cloud
BASE_DOMAIN=cmbagent.cloud

# Authentication Configuration (NextAuth.js)
NEXTAUTH_URL=https://cmbagent.cloud
NEXTAUTH_SECRET=your-production-secret-key-here

# Google OAuth Configuration (from backend config)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Feature Flags
DEV_MODE=false
DEBUG=false

# Performance Settings
NEXT_OPTIMIZE_FONTS=true
NEXT_OPTIMIZE_IMAGES=true

# Logging Configuration
LOG_LEVEL=info

# Security Settings
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict
