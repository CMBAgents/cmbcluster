# Example Environment File for Local Development
# Copy this to .env.local and fill in your actual values

# Application Configuration
NODE_ENV=development
PORT=8501

# API Configuration
API_URL=http://localhost:8000
BASE_DOMAIN=localhost

# Authentication Configuration (NextAuth.js)
NEXTAUTH_URL=http://localhost:8501
NEXTAUTH_SECRET=development-secret-key-change-in-production

# Google OAuth Configuration
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Feature Flags
DEV_MODE=true
DEBUG=true

# Performance Settings (can be disabled in development)
NEXT_OPTIMIZE_FONTS=false
NEXT_OPTIMIZE_IMAGES=false

# Logging Configuration
LOG_LEVEL=debug

# Security Settings (relaxed for development)
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax
